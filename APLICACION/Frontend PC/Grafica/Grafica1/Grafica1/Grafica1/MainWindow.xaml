<controls:MetroWindow x:Class="Grafica1.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    Title="Panel de Control"
    Height="500" Width="850"
    WindowStartupLocation="CenterScreen"
    Background="#1A1B24"
    BorderThickness="0"
    ResizeMode="CanResize"
WindowTitleBrush="Transparent"

    >


    <Window.Resources>
        <!-- Paleta de colores oscuros -->
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#121926"/>
        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#2C3A59"/>
        <SolidColorBrush x:Key="HoverGrayColor" Color="#3F4A72"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#F5F4F6"/>
        <SolidColorBrush x:Key="SecundaryTextColor" Color="#B0A7A1"/>
        <SolidColorBrush x:Key="AccentColor" Color="#C17E54"/>

        <!-- Estilo para botones con efecto hover -->
        <Style x:Key="StyledUserButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryGrayColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" StrokeThickness="0"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B4D67"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10"
                                                          ShadowDepth="0"
                                                          Color="Black"
                                                          Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5A5C7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Estilo para las pestañas -->
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecundaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryGrayColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo del TabControl -->
        <Style x:Key="TabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0"
                                      IsItemsHost="True"
                                      Background="Transparent"
                                      Margin="0 0 0 10"/>
                            <ContentPresenter Grid.Row="1"
                                              ContentSource="SelectedContent"
                                              Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo de botones -->
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryGrayColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryDarkColor}"/>
            
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#505270"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    
    <Grid Background="{DynamicResource PrimaryDarkColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="793*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="98*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="10"
                Margin="20,20,20,20"
                Padding="10" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Border.Background>
                <ImageBrush/>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <!-- Área principal -->
                    <ColumnDefinition Width="240"/>
                    <!-- Panel cuadrado + botón toggle -->
                    <ColumnDefinition Width="0.6*"/>
                    <!-- Menú derecho -->
                </Grid.ColumnDefinitions>

                <!-- Tabs y contenido -->
                <!-- Tabs, título y contenido -->
                <StackPanel Grid.Column="0"
            Margin="0"
            VerticalAlignment="Stretch">

                    <!-- Tabs -->
                    <TabControl x:Name="MainTabs"
                Style="{StaticResource TabControlStyle}"
                SelectionChanged="MainTabControl_SelectionChanged">
                        <TabItem Header="RESUMENES" Style="{StaticResource TabItemStyle}">
                            <Grid />
                        </TabItem>
                        <TabItem Header="Home2" Style="{StaticResource TabItemStyle}">
                            <Grid />
                        </TabItem>
                    </TabControl>

                    <!-- Título dinámico -->
                    <TextBlock x:Name="SectionTitle"
               Text="Resumen General"
               FontSize="24"
               FontWeight="Bold"
               Foreground="{DynamicResource PrimaryTextColor}"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"/>

                    <!-- Contenido dinámico debajo del título -->
                    <ContentControl x:Name="ContentArea"
                    Margin="0,10,0,0"/>
                </StackPanel>


                <!-- Contenedor para panel cuadrado y botón -->
                <!-- Contenedor para panel cuadrado y botón -->
                <StackPanel x:Name="MiniPanelContainer"
            Grid.Column="1"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="5">

                    <Button x:Name="ToggleMenuButton"
           Width="30" Height="60"
           FontSize="20" FontWeight="Bold"
           Background="{DynamicResource PrimaryGrayColor}"
           Foreground="{DynamicResource PrimaryTextColor}"
           BorderThickness="0"
           Cursor="Hand"
           Padding="0"
           VerticalAlignment="Center"
           HorizontalAlignment="Right"
           Click="ToggleMenuButton_Click">
                        <Image Source="/Image/flechacerrar.png"
              Stretch="Uniform"
              Width="24" Height="24"/>
                    </Button>
                    <!-- Caja -->
                    <Border x:Name="MiniPanelBox"
            Width="160" Height="250"
            Background="{DynamicResource PrimaryGrayColor}"
            CornerRadius="10"
            VerticalAlignment="Center"
            Visibility="Visible"
            Margin="0,0,5,0">
                        <StackPanel Margin="10" VerticalAlignment="Center">
                            <TextBlock Text="Assignatura"
                                HorizontalAlignment="Center"
                                Foreground="{DynamicResource PrimaryTextColor}"
                                FontWeight="Bold"
                                FontSize="16"
                                Margin="0 10 0 0"/>
                            <ComboBox 
                                x:Name="AssignaturasComboBox"
                                Margin="0 10 0 5"
                  Foreground="Black"
                  Background="White"
                  Height="25"
                  Width="140">
                            </ComboBox>
                            <ComboBox Margin="0 10 0 5"
                  Foreground="Black"
                  Background="White"
                  Height="25"
                  Width="140">
                                <ComboBoxItem Content="A" />
                                <ComboBoxItem Content="B" />
                            </ComboBox>
                            <TextBlock Text="Tema"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource PrimaryTextColor}"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0 10 0 0"/>
                        </StackPanel>


                    </Border>

                    <!-- Botón Toggle -->
                    <Button x:Name="ToggleMenuButtonabrir"
           Width="30" Height="60"
           FontSize="20" FontWeight="Bold"
           Background="{DynamicResource PrimaryGrayColor}"
           Foreground="{DynamicResource PrimaryTextColor}"
           BorderThickness="0"
           Cursor="Hand"
           Padding="0"
           VerticalAlignment="Center"
           HorizontalAlignment="Right"
           Visibility="Hidden"
           Click="ToggleMenuButton_Click">
                        <Image Source="/Image/flecha.png"
              Stretch="Uniform"
              Width="24" Height="24"/>
                    </Button>
                </StackPanel>


                <!-- Popup pequeño con dos ComboBox -->
                <Popup x:Name="MiniMenuPopup"
                       Placement="MousePoint"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <Border Background="{DynamicResource PrimaryGrayColor}"
                            Padding="10"
                            CornerRadius="6"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Width="150"
                            Height="100">
                        <StackPanel>
                            <ComboBox Margin="0 5 0 5"
                                      Foreground="Black"
                                      Background="White"
                                      Height="25"
                                      Width="120">
                                <ComboBoxItem Content="Opción A"/>
                                <ComboBoxItem Content="Opción B"/>
                            </ComboBox>
                            <ComboBox Margin="0 5 0 0"
                                      Foreground="Black"
                                      Background="White"
                                      Height="25"
                                      Width="120">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Menú lateral derecho -->
                <Border x:Name="RightMenuPanel"
                        Grid.Column="2"
                        Background="{DynamicResource PrimaryGrayColor}"
                        CornerRadius="0 10 10 0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Menú"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="0 0 0 15"/>
                        <Button Style="{StaticResource StyledButton}" Content="Opción 1"/>
                        <Button Style="{StaticResource StyledButton}" Content="Opción 2"/>
                        <Button Style="{StaticResource StyledButton}" Content="Opción 3"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <!-- 🔥 Botón de usuario en esquina inferior izquierda -->
        <Button x:Name="UserButton"
                Width="50"
                Height="50"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="30,0,0,30"
                Style="{StaticResource StyledUserButton}" Grid.Row="1" Grid.ColumnSpan="2" Cursor="Hand">
            <Image Source="/Image/cerrar_usuario.png"
                   Width="28"
                   Height="28"
                   Stretch="Uniform"/>
        </Button>
    </Grid>
</controls:MetroWindow>
