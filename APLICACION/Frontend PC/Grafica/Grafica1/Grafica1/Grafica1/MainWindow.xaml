<Window x:Class="Grafica1.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafica1"
        mc:Ignorable="d"
        Title="Panel de Control"
        Height="500" Width="850"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"
        Background="#1A1B24"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Paleta de colores oscuros -->
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#1A1B24"/>
        <SolidColorBrush x:Key="HoverGrayColor" Color="#2B2D3A"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#F0F2F5"/>
        <SolidColorBrush x:Key="SecundaryTextColor" Color="#AAB2C3"/>
        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#3C3F58"/>

        <!-- Estilo para las pestañas -->
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecundaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontWeight" Value="500"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryGrayColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo del TabControl -->
        <Style x:Key="TabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0"
                                      IsItemsHost="True"
                                      Background="Transparent"
                                      Margin="0 0 0 10"/>
                            <ContentPresenter Grid.Row="1"
                                              ContentSource="SelectedContent"
                                              Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo de botones -->
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryGrayColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="FontWeight" Value="600"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#505270"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource PrimaryDarkColor}">
        <Border CornerRadius="10"
                Background="{DynamicResource HoverGrayColor}"
                Margin="20"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <!-- Área principal -->
                    <ColumnDefinition Width="240"/>
                    <!-- Panel cuadrado + botón toggle -->
                    <ColumnDefinition Width="0.6*"/>
                    <!-- Menú derecho -->
                </Grid.ColumnDefinitions>

                <!-- Tabs y contenido -->
                <!-- Tabs, título y contenido -->
                <StackPanel Grid.Column="0"
            Margin="0"
            VerticalAlignment="Stretch">

                    <!-- Tabs -->
                    <TabControl x:Name="MainTabs"
                Style="{StaticResource TabControlStyle}"
                SelectionChanged="MainTabControl_SelectionChanged">
                        <TabItem Header="RESUMENES" Style="{StaticResource TabItemStyle}">
                            <Grid />
                        </TabItem>
                        <TabItem Header="Home2" Style="{StaticResource TabItemStyle}">
                            <Grid />
                        </TabItem>
                    </TabControl>

                    <!-- Título dinámico -->
                    <TextBlock x:Name="SectionTitle"
               Text="Resumen General"
               FontSize="24"
               FontWeight="Bold"
               Foreground="{DynamicResource PrimaryTextColor}"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"/>

                    <!-- Contenido dinámico debajo del título -->
                    <ContentControl x:Name="ContentArea"
                    Margin="0,10,0,0"/>
                </StackPanel>


                <!-- Contenedor para panel cuadrado y botón -->
                <!-- Contenedor para panel cuadrado y botón -->
                <StackPanel x:Name="MiniPanelContainer"
            Grid.Column="1"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="5">

                    <Button x:Name="ToggleMenuButton"
           Width="30" Height="60"
           FontSize="20" FontWeight="Bold"
           Background="{DynamicResource PrimaryGrayColor}"
           Foreground="{DynamicResource PrimaryTextColor}"
           BorderThickness="0"
           Cursor="Hand"
           Padding="0"
           VerticalAlignment="Center"
           HorizontalAlignment="Right"
           Click="ToggleMenuButton_Click">
                        <Image Source="/Image/flechacerrar.png"
              Stretch="Uniform"
              Width="24" Height="24"/>
                    </Button>
                    <!-- Caja -->
                    <Border x:Name="MiniPanelBox"
            Width="160" Height="250"
            Background="{DynamicResource PrimaryGrayColor}"
            CornerRadius="10"
            VerticalAlignment="Center"
            Visibility="Visible"
            Margin="0,0,5,0">
                        <StackPanel Margin="10" VerticalAlignment="Center">
                            <TextBlock Text="Assignatura"
                                HorizontalAlignment="Center"
                                Foreground="{DynamicResource PrimaryTextColor}"
                                FontWeight="Bold"
                                FontSize="16"
                                Margin="0 10 0 0"/>
                            <ComboBox Margin="0 10 0 5"
                  Foreground="Black"
                  Background="White"
                  Height="25"
                  Width="140">
                                <ComboBoxItem Content="Primera opción" />
                                <ComboBoxItem Content="Segunda opción" />
                            </ComboBox>
                            <ComboBox Margin="0 10 0 5"
                  Foreground="Black"
                  Background="White"
                  Height="25"
                  Width="140">
                                <ComboBoxItem Content="A" />
                                <ComboBoxItem Content="B" />
                            </ComboBox>
                            <TextBlock Text="Tema"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource PrimaryTextColor}"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0 10 0 0"/>
                        </StackPanel>

                        
                    </Border>

                    <!-- Botón Toggle -->
                    <Button x:Name="ToggleMenuButtonabrir"
           Width="30" Height="60"
           FontSize="20" FontWeight="Bold"
           Background="{DynamicResource PrimaryGrayColor}"
           Foreground="{DynamicResource PrimaryTextColor}"
           BorderThickness="0"
           Cursor="Hand"
           Padding="0"
           VerticalAlignment="Center"
           HorizontalAlignment="Right"
           Visibility="Hidden"
           Click="ToggleMenuButton_Click">
                        <Image Source="/Image/flecha.png"
              Stretch="Uniform"
              Width="24" Height="24"/>
                    </Button>
                </StackPanel>


                <!-- Popup pequeño con dos ComboBox -->
                <Popup x:Name="MiniMenuPopup"
                       Placement="MousePoint"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <Border Background="{DynamicResource PrimaryGrayColor}"
                            Padding="10"
                            CornerRadius="6"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Width="150"
                            Height="100">
                        <StackPanel>
                            <ComboBox Margin="0 5 0 5"
                                      Foreground="Black"
                                      Background="White"
                                      Height="25"
                                      Width="120">
                                <ComboBoxItem Content="Opción A"/>
                                <ComboBoxItem Content="Opción B"/>
                            </ComboBox>
                            <ComboBox Margin="0 5 0 0"
                                      Foreground="Black"
                                      Background="White"
                                      Height="25"
                                      Width="120">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Menú lateral derecho -->
                <Border x:Name="RightMenuPanel"
                        Grid.Column="2"
                        Background="{DynamicResource PrimaryGrayColor}"
                        CornerRadius="0 10 10 0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Menú"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="0 0 0 15"/>
                        <Button Style="{StaticResource StyledButton}" Content="Opción 1"/>
                        <Button Style="{StaticResource StyledButton}" Content="Opción 2"/>
                        <Button Style="{StaticResource StyledButton}" Content="Opción 3"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>