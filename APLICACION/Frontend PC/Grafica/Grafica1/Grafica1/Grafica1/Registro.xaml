<controls:MetroWindow x:Class="Grafica1.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Registro de Usuario"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1A1B24"
        BorderThickness="0"
        ResizeMode="NoResize"
        WindowTitleBrush="Transparent"
                      ShowTitleBar="False"

                      >

    <controls:MetroWindow.Resources>
        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#3A3F4B"/>
        <SolidColorBrush x:Key="HoverGrayColor" Color="#455a77"/>
        <SolidColorBrush x:Key="PressedGrayColor" Color="#2D313A"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#ECEFF4"/>

        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryGrayColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" Color="#000000" Opacity="0.15" Direction="270" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PressedGrayColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#2D2F33"/>
                                <Setter Property="Foreground" Value="#888"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </controls:MetroWindow.Resources>

    <Grid Background="#1A1B24">
        <Border Width="350"
                Height="480"
                Background="#2C3A59"
                CornerRadius="12"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Título -->
                    <RowDefinition Height="Auto"/>
                    <!-- Label Nombre Usuario -->
                    <RowDefinition Height="Auto"/>
                    <!-- TextBox Nombre Usuario -->
                    <RowDefinition Height="Auto"/>
                    <!-- Label Correo -->
                    <RowDefinition Height="Auto"/>
                    <!-- TextBox Correo -->
                    <RowDefinition Height="Auto"/>
                    <!-- Label Contraseña -->
                    <RowDefinition Height="Auto"/>
                    <!-- PasswordBox Contraseña -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botón Registrar -->
                    <RowDefinition Height="20"/>
                    <!-- Espacio para mensajes -->
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Text="Registro de Usuario"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Grid.Row="0"/>

                <!-- Nombre Usuario -->
                <TextBlock Text="Nombre de Usuario"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="15,0,15,5"
                           Grid.Row="1"/>
                <TextBox x:Name="NombreUsuarioTextBox"
                         Height="32"
                         CaretBrush="Black"
                         Background="White"
                         Foreground="Black"
                         FontSize="14"
                         Margin="15,0,15,15"
                         Padding="5"
                         Grid.Row="2"/>

                <!-- Correo -->
                <TextBlock Text="Correo Electrónico"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="15,0,15,5"
                           Grid.Row="3"/>
                <TextBox x:Name="CorreoTextBox"
                         Height="32"
                         CaretBrush="Black"
                         Background="White"
                         Foreground="Black"
                         FontSize="14"
                         Margin="15,0,15,15"
                         Padding="5"
                         Grid.Row="4"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="15,0,15,5"
                           Grid.Row="5"/>
                <PasswordBox x:Name="ContrasenaBox"
                             Height="32"
                             CaretBrush="Black"
                             Background="White"
                             Foreground="Black"
                             FontSize="14"
                             Margin="15,0,15,15"
                             Padding="5"
                             Grid.Row="6"/>

                <!-- Botón Registrar -->
                <Button Content="REGISTRARSE"
                        Click="Registrar_Click"
                        Height="36"
                        Style="{StaticResource StyledButton}"
                        FontWeight="Bold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Margin="15,10,15,10"
                        Grid.Row="7"/>

                <!-- Mensaje de error o éxito -->
                <TextBlock x:Name="MensajeText"
                           Foreground="#D9534F"
                           FontWeight="Bold"
                           FontSize="12"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           Grid.Row="8"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</controls:MetroWindow>
