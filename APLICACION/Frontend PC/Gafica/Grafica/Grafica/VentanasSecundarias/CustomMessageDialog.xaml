<Window x:Class="Grafica.VentanasSecundarias.CustomMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nueva Asignatura"
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
                Icon="/image/icono_libro.png"

        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryDarkColor}"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Effect="{DynamicResource ShadowEffect}"
        
        
>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label Asignatura -->
        <TextBlock x:Name="LabelAsignaturaTextBox"
                   Text="Nombre Asignatura:"
                   Foreground="White" FontSize="14"
                   Margin="0,0,0,5"
                   Grid.Row="0"/>

        <!-- TextBox Asignatura -->
        <TextBox x:Name="AssignaturaTextBox"
                 FontSize="14"
                 Grid.Row="1"
                 MinWidth="200"
                 Height="30"
                 Margin="0,0,0,10"/>

        <!-- ComboBox (modo Tema) -->
        <TextBlock x:Name="LabelAsignaturaComboBox"
                   Text="Selecciona la Asignatura:"
                   Foreground="White" FontSize="14"
                   Margin="0,0,0,5"
                   Grid.Row="0"
                   Visibility="Collapsed"/>

        <ComboBox x:Name="AssignaturaComboBox"
                  FontSize="14"
                  Grid.Row="1"
                  MinWidth="200"
                  Height="30"
                  Margin="0,0,0,10"
                  Visibility="Collapsed"/>

        <!-- Tema -->
        <TextBlock x:Name="LabelTemaTextBox"
                   Text="Introduce el nombre del Tema:"
                   Foreground="White" FontSize="14"
                   Margin="0,0,0,5"
                   Grid.Row="2"
                   Visibility="Collapsed"/>

        <TextBox x:Name="TemaTextBox"
                 FontSize="14"
                 Grid.Row="3"
                 MinWidth="200"
                 Height="30"
                 Margin="0,0,0,10"
                 Visibility="Collapsed"/>

        <!-- Botones -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="OnCancelClick"/>
            <Button Content="Aceptar"
                    Width="90"
                    Click="OnAcceptClick"/>
        </StackPanel>
    </Grid>
</Window>
