<Window x:Class="Grafica.VentanasSecundarias.CustomMessageDialogComboBox2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Archivo"
        Height="275" Width="400"
        WindowStartupLocation="CenterOwner"
        Icon="/image/icono_libro.png"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryDarkColor}"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Effect="{DynamicResource ShadowEffect}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ComboBox Asignatura -->
        <ComboBox x:Name="AsignaturaComboBox"
                  FontSize="14"
                  MinWidth="200"
                  Height="30"
                  Grid.Row="0"
                  Margin="0,0,0,10"
                  SelectionChanged="AsignaturaComboBox_SelectionChanged" />

        <!-- ComboBox Tema -->
        <ComboBox x:Name="TemaComboBox"
                  FontSize="14"
                  MinWidth="200"
                  Height="30"
                  Grid.Row="1"
                  Margin="0,0,0,10"
                  Visibility="Collapsed"
                  SelectionChanged="TemaComboBox_SelectionChanged" />

        <!-- Label para nombre de archivo -->
        <TextBlock Text="Nombre del archivo:"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,5"
                   Grid.Row="2"
                   Visibility="Collapsed"
                   x:Name="ArchivoLabel" />

        <!-- TextBox para nombre de archivo -->
        <TextBox x:Name="ArchivoTextBox"
                 FontSize="14"
                 Grid.Row="3"
                 MinWidth="200"
                 Height="30"
                 Margin="0,0,0,10"
                 IsEnabled="False"
                   TextChanged="ArchivoTextBox_TextChanged"/>
        
        

        <!-- Botones -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="OnCancelClick"/>
            <Button Content="Aceptar"
                    Width="90"
                    Click="OnAcceptClick"
                    x:Name="AceptarButton"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
