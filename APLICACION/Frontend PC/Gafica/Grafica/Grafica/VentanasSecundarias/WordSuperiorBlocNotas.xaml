<Window x:Class="Grafica.VentanasSecundarias.WordSuperiorBlocNotas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:Grafica.VentanasSecundarias"
        xmlns:panel="clr-namespace:Grafica"  
    mc:Ignorable="d"
        Title="Bloc flotante" Height="400" Width="600">
    <!-- ancho mayor para el panel -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- RichTextBox -->
            <ColumnDefinition Width="Auto" />
            <!-- PanelMenu2 -->
        </Grid.ColumnDefinitions>

        <!-- RichTextBox en la columna 0 -->
        <RichTextBox Name="CopiaEditor"
                     Grid.Column="0"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     FontSize="14"
                     TextChanged="CopiaEditor_TextChanged"
                     PreviewTextInput="CopiaEditor_PreviewTextInput">
            <FlowDocument>
                <Paragraph></Paragraph>
            </FlowDocument>
        </RichTextBox>

        <!-- PanelMenu2 en la columna 1 -->
        <panel:PanelMenu2 Grid.Column="1" Margin="5"/>
    </Grid>
</Window>