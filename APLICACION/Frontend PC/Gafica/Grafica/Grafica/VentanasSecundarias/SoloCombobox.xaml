<Window x:Class="Grafica.VentanasSecundarias.SoloCombobox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Tema"
        Height="225" Width="400"
        WindowStartupLocation="CenterOwner"
                Icon="/image/icono_libro.png"

        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryDarkColor}"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Effect="{DynamicResource ShadowEffect}"
        
        
>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ComboBox Asignaturas -->
            <RowDefinition Height="Auto"/>
            <!-- Label Tema -->
            <RowDefinition Height="Auto"/>
            <!-- TextBox Tema -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- ComboBox para seleccionar Asignatura -->
        <ComboBox x:Name="AssignaturaComboBox"
                  FontSize="14"
                  MinWidth="200"
                  Height="30"
                  Grid.Row="0"
                  Margin="0,0,0,15"
                  IsEditable="False"
              />




        <!-- Botones -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="OnCancelClick"/>
            <Button Content="Aceptar"
                    Width="90"
                    Click="OnAcceptClick"/>
        </StackPanel>
    </Grid>

</Window>


