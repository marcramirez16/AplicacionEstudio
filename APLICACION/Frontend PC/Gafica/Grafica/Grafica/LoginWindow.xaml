<Window x:Class="Grafica.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#1A1B24"
        BorderThickness="0"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        WindowStyle="None">

    <Window.Resources>
        <!-- Estilo para botones de ventana -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="0"
                        Padding="10"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C50F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IntermedioPanelStyle" TargetType="ContentControl">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <!-- blanco con baja opacidad -->
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        BorderBrush="#5A668A"
                        BorderThickness="1"
                        SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Base gris grafito sobrio -->
        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#3A3F4B"/>

        <!-- Hover gris con toque azul muy desaturado -->
        <SolidColorBrush x:Key="HoverGrayColor" Color="#455a77"/>
        <!-- gris azulado muy suave -->

        <!-- Presionado más oscuro -->
        <SolidColorBrush x:Key="PressedGrayColor" Color="#2D313A"/>

        <!-- Texto blanco suave -->
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#ECEFF4"/>
        <!-- Hover más oscuro -->

        <!-- 🎯 Estilo de botón -->
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryGrayColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" Color="#000000" Opacity="0.15" Direction="270" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverGrayColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PressedGrayColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#2D2F33"/>
                                <Setter Property="Foreground" Value="#888"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="SlideInFromRightStoryboard">
            <DoubleAnimation Storyboard.TargetName="LoginBorderTransform"
                 Storyboard.TargetProperty="X"
                 From="50" To="0"
                 Duration="0:0:0.4"
                 AccelerationRatio="0.3"
                 DecelerationRatio="0.7"/>
        </Storyboard>
    </Window.Resources>




    <Grid Background="#1A1B24">
        <Grid Name="rctHeader"  Grid.Row="0" Height="40" VerticalAlignment="Top" Background="{DynamicResource IntermediateColor}"
              PreviewMouseMove="rctHeader_PreviewMouseMove">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icono -->
                <ColumnDefinition Width="*"/>
                <!-- Espaciador central -->
                <ColumnDefinition Width="Auto"/>
                <!-- Botón cerrar -->
            </Grid.ColumnDefinitions>

            <!-- Icono -->
            <Image Source="/Image/icono_libro.png" VerticalAlignment="Center" Margin="10,2,10,0" Grid.Column="0" Height="24" Width="24"/>

            <!-- Botón cerrar a la derecha -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2">
                <Button Width="50" Height="40" Margin="0,0,0,0" ToolTip="Cerrar"
            Click="Close_Click"
            Style="{StaticResource CloseButtonStyle}">
                    <Grid Width="10" Height="10" Margin="0, 3, 0, 0">
                        <Path Stroke="White" StrokeThickness="1.5" Stretch="Uniform"
                  Data="M 0,0 L 10,10 M 10,0 L 0,10"/>
                    </Grid>
                </Button>
            </StackPanel>
            <Border Background="white" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,0" BorderBrush="White" BorderThickness="0,0,0,0"/>

        </Grid>




        <Border 
                x:Name="LoginBorder"
                Width="350"
                Height="420"
                Background="#28323C"
                CornerRadius="12"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            
            >
            <Border.RenderTransform>
                <TranslateTransform x:Name="LoginBorderTransform" X="100"/>
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Imagen -->
                    <RowDefinition Height="Auto"/>
                    <!-- Título -->
                    <RowDefinition Height="Auto"/>
                    <!-- Usuario Label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Usuario TextBox -->
                    <RowDefinition Height="Auto"/>
                    <!-- Contraseña Label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Contraseña Box -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botón Ingresar -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botón Registro -->
                    <RowDefinition Height="20"/>
                    <!-- Espacio fijo para ErrorText -->
                </Grid.RowDefinitions>

                <!-- Icono de usuario -->
                <Image Source="/Image/usuario_inicio.png"
                       Width="80"
                       Height="50"
                       Margin="20,0,20,15"
                       HorizontalAlignment="Center"
                       Grid.Row="0"/>

                <!-- Título -->
                <TextBlock Text="Iniciar Sesión"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Grid.Row="1"/>

                <!-- Usuario -->
                <TextBlock Text="Usuario"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="15,0,15,5"
                           Grid.Row="2"/>
                <TextBox x:Name="UsuarioTextBox"
                         Height="32"
                         CaretBrush="Black"
                         Background="White"
                         Foreground="Black"
                         FontSize="14"
                         Margin="15,0,15,15"
                         Padding="5"
                         Grid.Row="3"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="15,0,15,5"
                           Grid.Row="4"/>
                <PasswordBox x:Name="ContrasenaBox"
                             Height="32"
                             CaretBrush="Black"
                             Background="White"
                             Foreground="Black"
                             FontSize="14"
                             Margin="15,0,15,15"
                             Padding="5"
                             Grid.Row="5"/>

                <!-- Botón de ingresar -->
                <Button Content="INGRESAR"
                        Click="Ingresar_Click"
                        Height="36"
                        Style="{StaticResource StyledButton}"
                        FontWeight="Bold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Margin="15,0,15,10"
                        Grid.Row="6"/>

                <!-- Botón Registrarse -->
                <Button Content="REGISTRO"
                        Click="Registro_Click"
                        Height="36"
                        Style="{StaticResource StyledButton}"
                        FontWeight="Bold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Margin="15,0,15,10"
                        Grid.Row="7"/>

                <!-- Mensaje de error -->
                <TextBlock x:Name="ErrorText"
                           Foreground="#D9534F"
                           FontWeight="Bold"
                           FontSize="12"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           Grid.Row="8"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
